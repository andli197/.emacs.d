if __name__ == "__main__":
    parser = argparse.ArgumentParser(description="Parse a description file to sqlite database")
    parser.add_argument('--definition', metavar='path', required=True, help='path to file containing the definitions of notifications.')
    parser.add_argument('--database', metavar='path', required=True, help='path to sqlite database file.')
    args = parser.parse_args()
    main(notificationdefinitionfile=args.definition, sqlitedatabase=args.database)
