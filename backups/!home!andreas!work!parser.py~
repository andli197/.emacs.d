import sqlite3


class sqliteheader:
    def __init__(self, name, datatype, options=''):
        self.name = name
        self.datatype = datatype
        self.options = options


class sqlitevalue:
    def __init__(self, value, header):
        self.value = value
        self.header = header

class sqliterow:
    def __init__(self, headers):
        self.headers = headers
        self.values = []

    def add_header(self, header):
        if len([h fot h in self.headers if h.name.lower() == header.name.lower()]) == 0:
            self.headers.append(header)

