import csv
import argparse
import sqlite3

def main(notificationdefinitionfile, sqlitedatabase):
    with open('NotificationDefinition.csv', 'r') as csvfile:
        reader = csv.reader(csvfile, delimiter=';')
        for line in reader:
            print ', '.join(line)


